---
import Layout from "../layouts/Layout.astro";
import Bb8 from "../components/Bb8.astro";
import ScrollArrow from "../components/ScrollArrow.astro";
import Hero from "../components/Hero.astro";
import Skills from "../components/Skills.astro";
import Code from "src/icons/Code.astro";
import Projects from "src/components/Projects.astro";
import About from "src/components/About.astro";
import Footer from "src/components/Footer.astro";

---

<Layout>
  <div id="smooth-wrapper">
    <div id="smooth-content">
      <section
        class="relative min-h-screen flex items-center justify-center text-center font-inter"
      >
        <div class="absolute top-4 right-4 z-50">
          <Bb8 />
        </div>

        <div class="fond-circle absolute w-[300px] h-[300px] bg-gradient-to-br from-pink-300 via-purple-300 to-cyan-300 opacity-50 rounded-full blur-xl top-2/6 left-3/10 z-1"></div>
        <div class="fond-circle absolute w-[250px] h-[250px] bg-gradient-to-tr from-green-300 via-yellow-300 to-pink-300 opacity-30 rounded-full blur-xl bottom-2/7 right-2/7 z-0"></div>
        <div class="fond-circle absolute w-[220px] h-[220px] bg-gradient-to-tl from-blue-300 via-cyan-300 to-purple-300 opacity-20 rounded-full blur-xl top-1/4 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-0"></div>
        
        <Hero />
        <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2">
          <ScrollArrow />
        </div>
      </section>

      <section class="container mx-auto ">
        <div class="tech-item flex gap-2 text-gray-600 justify-center items-center">
          <h2 class="font-title-section text-2xl font-semibold my-8">Stack tecnologico</h2>
          <Code class="w-7 h-7 fill-gray-500"/>
        </div>
        <Skills />
      </section>
      
      <section class="container mx-auto min-h-screen">
        <Projects />
      </section>

      <section id="about" class="container mx-auto flex flex-col pb-10 ">
        <div class="about-title flex gap-2 text-gray-600 justify-center items-center">
          <h2 class="font-title-section text-2xl font-semibold my-8">Sobre m√≠</h2>
          <!-- <Code class="w-7 h-7 fill-gray-500" /> -->
        </div>

        <About />
      </section>
      <Footer />
    </div>
  </div>
</Layout>

<script src="/src/scripts/animations.js"></script> 